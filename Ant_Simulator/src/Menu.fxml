<?xml version="1.0" encoding="UTF-8"?>

<!--https://stackoverflow.com/questions/31531059/how-to-remove-close-button-from-tabs-in-javafx -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="Menu_Controller"
         tabClosingPolicy="UNAVAILABLE">
    <Tab text="Control">
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="25" left="25"/> </padding>
            <Text fx:id="time" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

            <HBox fx:id="playBox" spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="31" GridPane.rowIndex="39" prefWidth="200">
                <Button text="Play" onAction="#play"/>
            </HBox>

            <HBox fx:id="pauseBox" spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="32" GridPane.rowIndex="39" prefWidth="200">
                <Button text="Pause" onAction="#pause"/>
            </HBox>

            <HBox fx:id="stopBox" spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="33" GridPane.rowIndex="39" prefWidth="200">
                <Button text="Stop" onAction="#stop"/>
            </HBox>
        </GridPane>
    </Tab>
</TabPane>
