<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Initial_Form_Controller"
          alignment="CENTER" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text id="Title" text="Settings for Ant simulator" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font name="Tahoma" size="20"/>
        </font>
    </Text>

    <Label text="No. of Ants: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="antNoTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Evaporation rate: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="evaporationBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Number of food item: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="foodAmtBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Type of obstacle: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="obstacleType" promptText="--- Choose an Obstacle ---" minWidth="200.0" GridPane.columnIndex="1"
              GridPane.rowIndex="4">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="No Obstacle"/>
                <String fx:value="One Obstacle"/>
                <String fx:value="Two Obstacle"/>
            </FXCollections>
        </items>
    </ComboBox>

    <HBox fx:id="hbBtn" spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Start simulation" onAction="#setUpStartButton"/>
    </HBox>

</GridPane>
